<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/ui5"
    tools:context="nshmadhani.com.wakenbake.main_screens.activities.OtpActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Verification"
        android:paddingStart="40dp"
        android:textColor="#fff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="380dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="#000000"
        android:layout_centerInParent="true"
        android:id="@+id/otpCardView"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Phone Number Edit Text -->
            <android.support.design.widget.TextInputLayout
                android:textColorHint="#f0f7f4"
                android:layout_marginTop="20dp"
                android:paddingStart="50dp"
                android:paddingEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" >
                <EditText
                    android:textSize="20sp"
                    android:hint="Mobile Number"
                    android:textColor="#FFFFFF"
                    android:id="@+id/otpPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@drawable/selector_bg_edit_2"
                    android:textCursorDrawable="@drawable/yellow_gradient_background"
                    android:padding="2dp" />
            </android.support.design.widget.TextInputLayout>

            <!--OTP Title Layout -->
            <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/otpTextView"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="OTP"
                    android:textColor="#FFCC00"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!--Pin View Layout -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <com.goodiebag.pinview.Pinview
                    android:id="@+id/otpPinView"
                    app:pinBackground="@drawable/otpview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:pinWidth="30dp"
                    app:pinHeight="40dp"
                    app:pinLength="6"
                    app:cursorVisible="false"

                    app:forceKeyboard="true"
                    app:hint="0"
                    app:inputType="text"
                    app:password="false"/>
            </LinearLayout>

            <!--Confirm Button Layout -->
            <!--<LinearLayout-->
                <!--android:layout_marginTop="25dp"-->
                <!--android:gravity="center"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_weight="100"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp">-->

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:id="@+id/confirmButton"
                        android:background="@drawable/button_shape_black_layout"
                        android:stateListAnimator="@drawable/state_list_animator_z"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="Confirm"
                        android:textColor="#d3d3d3">
                    </Button>
                </LinearLayout>
            </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
