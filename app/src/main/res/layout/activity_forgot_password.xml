<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.ForgotPasswordActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Wake N Bake"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:paddingStart="25dp"
        android:textSize="35sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_centerInParent="true"
        android:paddingTop="30dp"
        android:layout_width="320dp"
        android:layout_height="455dp">

        <android.support.v7.widget.CardView
            android:id="@+id/signupCardView"
            android:elevation="10dp"
            app:cardBackgroundColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="update password"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Email Edit Text -->
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#f0f7f4"
                    android:layout_marginTop="25dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >
                    <EditText
                        android:textSize="15sp"
                        android:hint="Email"
                        android:textColor="#f0f7f4"
                        android:id="@+id/forgotPasswordEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/selector_bg_edit_2"
                        android:textCursorDrawable="@drawable/yellow_gradient_background"
                        android:paddingBottom="4dp" />
                </android.support.design.widget.TextInputLayout>

                <!-- New Password Edit Text-->
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#f0f7f4"
                    android:layout_marginTop="25dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <EditText
                        android:textSize="15sp"
                        android:hint="New Password"
                        android:textColor="#f0f7f4"
                        android:id="@+id/forgotPasswordNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/selector_bg_edit_2"
                        android:textCursorDrawable="@drawable/yellow_gradient_background"
                        android:paddingBottom="4dp"  />
                </android.support.design.widget.TextInputLayout>

                <!--Confirm Password Edit Text-->
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="#f0f7f4"
                    android:layout_marginTop="25dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <EditText
                        android:textSize="15sp"
                        android:hint="Confirm Password"
                        android:textColor="#f0f7f4"
                        android:id="@+id/forgotPasswordConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:inputType="textPassword"
                        android:background="@drawable/selector_bg_edit_2"
                        android:textCursorDrawable="@drawable/yellow_gradient_background"
                        android:paddingBottom="4dp" />
                </android.support.design.widget.TextInputLayout>

                <!--Update Button -->
                <Button
                    android:layout_marginTop="45dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/updatePasswordButton"
                    android:backgroundTint="#FFFFFF"
                    android:background="@drawable/button_shape_white_layout"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="UPDATE"
                    android:elevation="8dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="#2fa881">
                </Button>

                <!-- Back to Login-->
                <TextView
                    android:id="@+id/loginLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Back to Login"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

</RelativeLayout>