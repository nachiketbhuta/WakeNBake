<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/ui5"
    tools:context="nshmadhani.com.wakenbake.main_screens.activities.LoginActivity" >

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Wake N Bake"
        android:paddingStart="26.5dp"
        android:textColor="#fff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="430dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        android:id="@+id/loginCardView"
        android:elevation="10dp"
        android:backgroundTint="#000000">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="455dp"
            android:orientation="vertical">

            <!--Login Title Text View -->
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="LOGIN"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--Username Edit Text -->
            <android.support.design.widget.TextInputLayout
                android:textColorHint="#c5c5c5"
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="20sp"
                    android:hint="@string/Username"
                    android:textColor="#472f17"
                    android:id="@+id/loginUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="12"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_bg_edit"
                    android:textCursorDrawable="@drawable/bg_input_cursor"
                    android:paddingBottom="2dp" />
            </android.support.design.widget.TextInputLayout>

            <!--Password Edit Text -->
            <android.support.design.widget.TextInputLayout
                android:textColorHint="#c5c5c5"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="20sp"
                    android:ems="12"
                    android:hint="@string/Password"
                    android:textColor="#472f17"
                    android:id="@+id/loginPassword"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:background="@drawable/selector_bg_edit"
                    android:textCursorDrawable="@drawable/bg_input_cursor"
                    android:paddingBottom="2dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Login Button-->
            <Button
                android:id="@+id/loginButton"
                android:background="@drawable/bt_shape"
                android:stateListAnimator="@drawable/state_list_animator_z"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Login"
                android:elevation="6dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:textColor="#FFFFFF" />

            <!--Forgot Password Text View -->
            <TextView
                android:id="@+id/loginSignup"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#9a9a9a"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_your_password" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--Floating Button -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/loginFloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/plus"
        android:transitionName="loginFab"
        android:layout_alignTop="@id/loginCardView"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@id/loginCardView"
        android:layout_marginEnd="-20dp"
        android:backgroundTint="#000000"/>

</RelativeLayout>

