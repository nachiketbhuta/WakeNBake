<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="nshmadhani.com.wakenbake.main_screens.activities.LoginActivity" >

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="39dp"-->
        <!--android:text="Wake N Bake"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="50sp"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:textStyle="bold" />-->


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        android:id="@+id/loginCardView"
        android:elevation="10dp"
        android:backgroundTint="#02317c">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Login Title Text View -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:text="Sign In"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:layout_marginTop="18dp"
                android:textStyle="bold" />

            <!--Username Edit Text -->
            <android.support.design.widget.TextInputLayout
                android:textColorHint="#c5c5c5"
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:hint="@string/Username"
                    android:textColor="#FFFFFF"
                    android:id="@+id/loginUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="12"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_bg_edit"
                    android:textCursorDrawable="@drawable/bg_input_cursor"
                    android:paddingBottom="2dp" />
            </android.support.design.widget.TextInputLayout>

            <!--Password Edit Text -->
            <android.support.design.widget.TextInputLayout
                android:textColorHint="#c5c5c5"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="18sp"
                    android:ems="12"
                    android:padding="3dp"
                    android:hint="@string/Password"
                    android:textColor="#FFFFFF"
                    android:id="@+id/loginPassword"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:background="@drawable/selector_bg_edit"
                    android:textCursorDrawable="@drawable/bg_input_cursor"
                    android:paddingBottom="2dp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/loginSignup"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_your_password" />

            <!-- Login Button-->
            <Button
                android:id="@+id/loginButton"
                android:background="@drawable/bt_shape"
                android:backgroundTint="#FFFFFF"
                android:stateListAnimator="@drawable/state_list_animator_z"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Login"
                android:elevation="6dp"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:textColor="#2fa881" />

            <!--Forgot Password Text View -->

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--Floating Button -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/plus"
        android:transitionName="loginFab"
        android:layout_alignTop="@id/loginCardView"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@id/loginCardView"
        android:layout_marginEnd="-20dp"
        android:backgroundTint="#000000"
        app:borderWidth="0dp"/>

</RelativeLayout>

