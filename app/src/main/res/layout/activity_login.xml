<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nshmadhani.com.wakenbake.main_screens.LoginActivity" >

    <!-- Login progress -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/red">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_alignParentBottom="true" >

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/app_logo"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <!-- Email Label -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextHint"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/mLoginEmailEditText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/login_user_asset"
            android:hint="Email"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

    </android.support.design.widget.TextInputLayout>

    <!-- Password Label -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/login_password_asset"
        android:theme="@style/EditTextHint">
        <EditText
            android:id="@+id/mLoginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/login_password_asset"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

    </android.support.design.widget.TextInputLayout>

    <!--Button -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/mLoginButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:background="@drawable/shape"
        android:elevation="10dp"
        android:text="Login"/>

    <!-- Sign Up Link -->
    <TextView android:id="@+id/mLoginSignupLinkTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="No account yet? Create one"
        android:clickable="true"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        android:gravity="center"
        android:textSize="16sp"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>

